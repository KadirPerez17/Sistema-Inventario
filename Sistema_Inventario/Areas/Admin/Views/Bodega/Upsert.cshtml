@model SistemaInventario.Modelos.Bodega

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Bodega";
}


<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">
        <div class="row border-0"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        @if (Model.Id != 0)
        {
            titulo = "Actualizar Bodega";
            <input type="hidden" asp-for="Id" id="id"/>

        }

        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>

    </div>

    <div class="row mb-2 mt-2">
        <div class="from-group col-mb-6">
            <label>Nombre</label>
            <input type="text" asp-for="Nombre" class="from-control" placeholder="Nombre de la bodega" id="nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2 mt-2">
        <div class="from-group col-mb-6">
            <label>Descripcion</label>
            <input type="text" asp-for="Descripcion" class="from-control" placeholder="Descripcion de la bodega">
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2 mt-2">
        <div class="from-group col-mb-6">
            <label>Estado</label>
            <input type="text" asp-for="Estado" class="from-control" placeholder="Estado de la bodega">
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>
    <br>
    <div>
        @if (Model.Id != 0)
        {
            <partial name="_BotonesActualizarYRegresar" model="Model.Id" />
        }
        else
        {
            <partial name="_BotonesCrearYRegresar" />
        }
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        document.getElementById("nombre").addEventListener("change", function () {
            validarNombre();
        });

        function validarNombre() 
        {
            var url = '@Url.Content("~/")' + 'Bodega/ValidarNombre'
            var id = '#id'
            var nombre = '#nombre'

            $.getJSON(url, {id: $(id).val(), nombre: $(nombre).val()}, function (data) {
                $.each(data, function(key, value){
                    if(value{
                        var nombre = documento.getElementById("nombre");
                        swal("error", "Nombre ya existe", "error")
                        nombre.value = "";
                    }
                })       
            })
        }

    </script>
}
